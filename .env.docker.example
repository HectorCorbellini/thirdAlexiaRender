# =============================================================================
# Docker Environment Configuration Example
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_USER=alexia_user
POSTGRES_PASSWORD=alexia_password
POSTGRES_DB=alexia_db

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=production

# -----------------------------------------------------------------------------
# MESSAGING PLATFORM SELECTION
# -----------------------------------------------------------------------------
# Choose primary messaging platform: whatsapp or telegram
MESSAGING_PLATFORM=telegram

# -----------------------------------------------------------------------------
# WHATSAPP BUSINESS API CONFIGURATION
# -----------------------------------------------------------------------------
WHATSAPP_ACCESS_TOKEN=your-meta-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# -----------------------------------------------------------------------------
# TELEGRAM BOT API CONFIGURATION
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_POLLING=true
TELEGRAM_POLLING_INTERVAL=30000

# -----------------------------------------------------------------------------
# AI PROVIDER SELECTION
# -----------------------------------------------------------------------------
# Choose AI provider: openai, groq
AI_PROVIDER=groq

# -----------------------------------------------------------------------------
# OPENAI API CONFIGURATION
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# -----------------------------------------------------------------------------
# GROQ API CONFIGURATION
# -----------------------------------------------------------------------------
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant

# -----------------------------------------------------------------------------
# MAP PROVIDER CONFIGURATION
# -----------------------------------------------------------------------------
MAP_PROVIDER=nominatim
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here
